<h1>all list</h1>

<ol>
<% @lists.each do |list| %>
  <li><%= link_to list.name, list_path(list)%></li>
<% end %>
</ol>

<section class="hero-section">
    <div class="container">
      <h1>Save any kind of movies</h1>
      <p>Classic</p>
    </div>
  </section>

  <!-- Movie Lists Section -->
  <section class="my-5">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Lists</h2>
        <%# <a href="#" class="btn btn-success">Create a movie list</a> %>
        <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
      </div>
      <div class="row g-4">
        <div class="col-md-4">
          <div class="classic-movies">
            <div class="card-body text-center">
              <h5 class="card-title">Classic movies</h5>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="superheros">
            <div class="card-body text-center">
              <h5 class="card-title">Superhero</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
